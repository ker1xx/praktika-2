<Window x:Class="laba2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:laba2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button" x:Key ="but">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
        <Style TargetType="Button" BasedOn="{StaticResource but}"/>
    </Window.Resources>
    <Grid>
        <Button x:Name="tabl1" Content="Таблица преподавателей" Click="tab1_Click" VerticalAlignment="Top"/>
        <Button x:Name="tabl2" Content="Таблица практик" Click="tab2_Click" VerticalAlignment="Center"/>
        <Button x:Name="tabl3" Content="Таблица дисциплин" Click="tab3_Click" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
