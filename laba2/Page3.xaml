<Page x:Class="laba2.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:laba2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page3" Background="White">

    <Grid>
        <TextBox x:Name="Discipline" VerticalAlignment="Center" HorizontalAlignment="Stretch" MinHeight="50"/>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Stretch" 
                   MinHeight="50" Margin="0,0,0,200" TextAlignment="Center" 
                   Text="Имя дисциплины:" FontSize="50"/>
        <Button x:Name="Create" Content="Добавить" VerticalAlignment="Bottom" Click="Create_Click" />
    </Grid>
</Page>

    